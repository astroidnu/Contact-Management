<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/item_contact_image_title"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <RelativeLayout
            android:padding="10dp"
            android:layout_toRightOf="@+id/item_contact_image_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_contact_people_picture"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:paddingLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/item_contact_people_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_contact_people_name"/>
        </RelativeLayout>
    </RelativeLayout>
</layout>